<div class="bg-[#19272f] min-h-screen">
  <!-- Hero Section with Gradient Background -->
  <div class="relative overflow-hidden">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#19272f] via-[#1a1f35] to-[#0f172a]"></div>

    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden opacity-10">
      <div class="absolute h-40 w-40 rounded-full bg-[#ffd500] blur-3xl -top-20 -left-20 animate-pulse"></div>
      <div class="absolute h-60 w-60 rounded-full bg-blue-500 blur-3xl top-1/2 right-0 animate-pulse delay-700"></div>
    </div>

    <!-- Main Content -->
    <div class="relative">
      <!-- Hero Content -->
      <div class="container mx-auto px-6 pt-20 pb-32">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 mt-24 leading-tight">
            Your Complete Financial Picture in <span class="text-[#ffd500]">One Place</span>
          </h1>
          <p class="text-xl text-gray-300 mb-12 leading-relaxed">
            Connect all your accounts, track expenses, and gain insights with powerful analytics.
            The smartest way to manage your money.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
            <%= link_to new_user_registration_path,
                class: "inline-flex items-center px-8 py-4 rounded-xl bg-[#ffd500] text-[#19272f] font-semibold hover:bg-[#e6c000] transition-all transform hover:scale-105" do %>
              Get Started Free
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>

            <%= link_to "#how-it-works",
                class: "inline-flex items-center px-8 py-4 rounded-xl border border-gray-600 text-white hover:bg-white/10 transition-all" do %>
              See How It Works
            <% end %>
          </div>

          <!-- Integration Logos -->
          <div class="text-center z-20">
            <p class="text-sm text-gray-400 mb-4">Securely connect with 11,000+ financial institutions</p>
            <div class="flex justify-center items-center gap-8 ">
              <%= image_tag "logos/plaid-logo.svg", alt: "Plaid", class: "h-32" %>
              <%= image_tag "logos/visa-logo.png", alt: "Visa", class: "h-10" %>
              <%= image_tag "logos/master-card-logo.png", alt: "Mastercard", class: "h-10" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div id="how-it-works" class="bg-white py-24">
    <div class="container mx-auto px-6">
      <div class="text-center mb-20">
        <h2 class="text-4xl font-bold text-[#19272f] mb-6">Connect Your Financial World</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Multiple ways to import your transactions, powerful analytics to understand your spending.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <!-- Plaid Integration -->
        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center mb-6">
            <i class="fas fa-link text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-4">Bank Connection</h3>
          <p class="text-gray-600 mb-4">
            Securely connect your bank accounts and credit cards through Plaid. Automatic transaction imports, real-time balance updates.
          </p>
          <a href="#" class="text-blue-500 hover:text-blue-700 font-medium inline-flex items-center">
            Learn more about Plaid
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- CSV Upload -->
        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-[#ffd500] rounded-xl flex items-center justify-center mb-6">
            <i class="fas fa-file-csv text-[#19272f] text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-4">CSV Import</h3>
          <p class="text-gray-600 mb-4">
            Import transactions from any bank or credit card by uploading CSV files. Support for all major financial institutions.
          </p>
          <a href="#" class="text-blue-500 hover:text-blue-700 font-medium inline-flex items-center">
            View supported formats
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Analytics -->
        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center mb-6">
            <i class="fas fa-chart-line text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-4">Smart Analytics</h3>
          <p class="text-gray-600 mb-4">
            Beautiful visualizations and insights. Track spending patterns, set budgets, and make informed financial decisions.
          </p>
          <a href="#" class="text-blue-500 hover:text-blue-700 font-medium inline-flex items-center">
            See example reports
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Final CTA Section -->
  <div class="bg-[#19272f] py-20">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
        Ready to take control of your finances?
      </h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to new_user_registration_path,
            class: "inline-flex items-center px-8 py-4 rounded-xl bg-[#ffd500] text-[#19272f] font-semibold hover:bg-[#e6c000] transition-all transform hover:scale-105" do %>
          Start Free Trial
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
