<div class="container mx-auto p-8">
  <h2 class="text-2xl font-bold mb-4">Upload Your Transactions CSV</h2>
  <%= form_with url: upload_csv_transactions_path, local: true, html: { multipart: true } do |f| %>
    <div class="mb-4">
      <%= f.label :file, "Choose CSV file", class: "block text-gray-700" %>
      <%= f.file_field :file, class: "mt-1" %>
    </div>
    <%= f.submit "Upload CSV", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
  <br>
  <%= link_to "Back to Home", root_path, class: "text-blue-500" %>
</div>
