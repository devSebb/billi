<div class="bg-[#19272f] min-h-screen py-20">
  <div class="mx-auto max-w-md px-6">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold tracking-tight text-[#19272f]">
          Welcome back to <span class="text-[#ffd500]">Billi</span>
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Sign in to continue managing your expenses
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "text-[#19272f] mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#ffd500] focus:ring focus:ring-[#ffd500] focus:ring-opacity-50 px-4 py-3" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "text-[#19272f] mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#ffd500] focus:ring focus:ring-[#ffd500] focus:ring-opacity-50 px-4 py-3" %>
              <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700" onclick="togglePassword('password')">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </button>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                  class: "h-4 w-4 rounded border-gray-300 text-[#ffd500] focus:ring-[#ffd500]" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign in",
                class: "w-full bg-[#ffd500] hover:bg-[#e6c000] text-[#19272f] px-4 py-3 rounded-lg transition-colors duration-200 text-sm font-medium" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <div class="space-y-2">
          <%- if devise_mapping.registerable? %>
            <p class="text-gray-600">
              Don't have an account?
              <%= link_to "Sign up", new_registration_path(resource_name),
                  class: "text-[#19272f] hover:text-[#ffd500] font-medium" %>
            </p>
          <% end %>

          <%- if devise_mapping.recoverable? %>
            <%= link_to "Forgot your password?", new_password_path(resource_name),
                class: "text-[#19272f] hover:text-[#ffd500] font-medium block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function togglePassword(fieldId) {
  const field = document.getElementById(`user_${fieldId}`);
  const type = field.getAttribute('type') === 'password' ? 'text' : 'password';
  field.setAttribute('type', type);
}
</script>
