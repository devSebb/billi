<nav class="absolute inset-x-0 top-0 z-50 <%= current_page?(root_path) && !user_signed_in? ? '' : 'bg-[#19272f]' %>">
  <div class="container mx-auto px-6 py-8">
    <div class="flex justify-between items-center">
      <div class="text-2xl font-bold text-white">
        <%= link_to root_path, class: "flex items-center" do %>
          <span class="logo-font">
            <span class="text-[#ffd500]">B</span><span class="text-white">illi</span>
          </span>
        <% end %>
      </div>

      <div class="hidden md:flex items-center gap-6">
        <% if user_signed_in? %>
          <%= link_to root_path,
              class: "text-gray-300 hover:text-white transition-colors" do %>
            <i class="fas fa-chart-line"></i> Dashboard
          <% end %>

          <%= link_to user_profile_path,
              class: "text-gray-300 hover:text-white transition-colors" do %>
            <i class="fas fa-user"></i> Profile
          <% end %>

          <%= button_to destroy_user_session_path,
              method: :delete,
              class: "text-gray-300 hover:text-white transition-colors" do %>
            <i class="fas fa-sign-out-alt"></i> Sign Out
          <% end %>
        <% else %>
          <div class="flex items-center gap-6">
            <%= link_to "Sign In", new_user_session_path,
                class: "text-gray-300 hover:text-white transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
